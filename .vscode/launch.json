{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "🚀 [开发模式] 后端服务 (FastAPI)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host=127.0.0.1",
                "--port=8000",
                "--reload",
                "--log-level=debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            }
        },
        {
            "name": "📦 [生产模式] 统一应用 (单端口)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/unified_app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "🔧 [生产模式] FastAPI服务 (unified)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "unified_app:app",
                "--host=127.0.0.1",
                "--port=8000",
                "--reload",
                "--log-level=debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ],
    "compounds": [
        {
            "name": "🔥 [开发模式] 前后端分离调试",
            "configurations": [
                "🚀 [开发模式] 后端服务 (FastAPI)"
            ],
            "preLaunchTask": "启动前端开发服务器",
            "stopAll": true
        }
    ]
}